<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow" />

            <ImageView
                android:id="@+id/photo_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile_photo"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/my_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/text_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="20sp"
                android:gravity="end"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/photo_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/post_picture"/>
        <TextView
            android:id="@+id/text_posttitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="text_posttitle"
            android:textSize="40sp"
            android:gravity="left"/>
        <TextView
            android:id="@+id/text_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text_contents"
            android:gravity="left"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_need"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="需求人数:"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_add2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/text_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请参加"
                android:textSize="20sp"
                android:gravity="end"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="#label#label#label#label"
            />

        <TextView
            android:id="@+id/text_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论"
            android:gravity="left"/>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>